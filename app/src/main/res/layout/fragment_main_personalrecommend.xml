<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageview_personalrecommendfragment_recommendedfood"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="20dp"
        android:background="#4d66b7"
        android:layout_width="wrap_content"
        android:layout_height="250dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageview_personalrecommendfragment_recommendedfood"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textview_personalrecommendfragment_spicy"
            android:text="매운맛 : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textview_personalrecommendfragment_sweet"
            android:text="단맛 : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textview_personalrecommendfragment_solty"
            android:text="짠맛 : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textview_personalrecommendfragment_sour"
            android:text="신맛 : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textview_personalrecommendfragment_bitter"
            android:text="쓴맛 : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/button_mainfragment_personalrecommend_ok"
        android:text="확인"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>